import requests
import string

url = "https://en.wikipedia.org/wiki/List_of_spiral_galaxies"

website = requests.get(url)

source = website.text

from bs4 import BeautifulSoup

parser = BeautifulSoup(source,'html.parser')

#dictionary of information for galaxies from table
galaxies = dict()

